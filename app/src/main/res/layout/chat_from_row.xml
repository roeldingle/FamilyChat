<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgFromChatMessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        app:civ_border_width="4dp"
        app:civ_border_color="#2196F3"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/star_big_on" />
    <TextView
        android:id="@+id/txtFromChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:padding="16dp"
        android:maxWidth="240dp"
        android:text="This is a message sdsdsdsdsdssdsdsdsdsdsdsdsdsdsdsdsds sdsdsdsdsdssdsdsdsdsdsdsdsdsdsdsdsds"
        android:background="@drawable/rounded_edittext"
        app:layout_constraintStart_toEndOf="@+id/imgFromChatMessage"
        app:layout_constraintTop_toTopOf="@+id/imgFromChatMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>